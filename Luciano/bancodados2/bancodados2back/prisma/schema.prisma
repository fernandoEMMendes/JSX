generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model user {
    id    String @id @default(uuid())
    nome  String
    email String
    senha String

    create_at DateTime? @default(now())
    update_at DateTime? @default(now())

    @@map("usuario")
}

model client {
    id          String @id @default(uuid())
    nome        String
    cpf_cnpj    String
    rg_ie       String
    cel_tel     String
    cel_fixo    String
    rua         String
    numero      String
    complemento String
    bairro      String
    cidade      String
    estado      String

    create_at DateTime? @default(now())
    update_at DateTime? @default(now())

    @@unique(fields: [cpf_cnpj, rg_ie], name: "requisitos")
    @@map("clientes")
}

model produtos {
    id         String    @id @default(uuid())
    nome       String
    fabricante String
    quantidade String
    preco      String
    create_at  DateTime? @default(now())
    update_at  DateTime? @default(now())

    @@map("produtos")
}

