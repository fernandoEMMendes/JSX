generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id    String @id @default(uuid())
    email String
    senha String

    create_at DateTime? @default(now())
    update_at DateTime? @default(now())

    @@map("usuario")
}

model Client {
    id          String @id @default(uuid())
    nome        String
    cpf_cnpj    String
    rg_ie       String
    telefone    String
    rua         String
    casa        String
    complemento String
    bairro      String
    cidade      String
    estado      String

    create_at DateTime? @default(now())
    update_at DateTime? @default(now())

    @@map("clientes")
}

model Products {
    id         String    @id @default(uuid())
    nome       String
    fabricante String
    preco      String
    create_at  DateTime? @default(now())
    update_at  DateTime? @default(now())

    @@map("produtos")
}

